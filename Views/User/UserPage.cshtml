@model IEnumerable<DeliveryTrackingApp.Models.User.SearchDto>
@{
    ViewBag.Title = "Danh sách người dùng";
}

<h2>Danh sách người dùng</h2>

<form method="get" asp-action="UserPage">
    <input type="text" name="keyword" placeholder="Tìm kiếm..." />
    <button type="submit">Tìm</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
            <th>Xem</th>
        </tr>
    </thead>
    <tbody id="driverTable">
        @foreach (var item in Model)
        {
            <tr id="driver-@item.Id">
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td class="status">@item.Status</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa không?')">Xóa</button>
                    </form>
                    <a asp-action="UserUpdate" asp-route-id="@item.Id" class="btn btn-primary">Sửa</a>
                </td>
                <td>
                    <a asp-action="UserDetail" asp-route-id="@item.Id" class="btn btn-info">Xem</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="UserCreate" class="btn btn-success">Thêm mới</a>
