<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DeliveryTrackingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DeliveryTrackingApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Alert thông báo khẩn -->
        <div id="alertZone" class="alert alert-danger alert-dismissible fade show mt-3" style="display: none;" role="alert">
            ⚠️ Hết tài xế lúc <span id="alertTime"></span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DeliveryTrackingApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="UserPage">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="RolePage">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DeliveryTrip" asp-action="DeliveryTripPage">Privacy</a>
                        </li>
                        <li>
                        <!-- Dropdown thông báo -->
                        <div class="dropdown" style="position: absolute; right: 16px; top: 16px;">
                            <button class="btn btn-light position-relative" id="notificationBtn" data-bs-toggle="dropdown" aria-expanded="false">
                                🔔
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                      id="notificationCount" style="display: none;">
                                    0
                                </span>
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end"
                                id="notificationDropdown"
                                style="width: 300px; max-height: 400px; overflow-y: auto;">
                                <li><span class="dropdown-item text-muted">Không có thông báo</span></li>
                            </ul>
                        </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DeliveryTrackingApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- External Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/push.js/1.0.12/push.min.js"></script>

    <!-- Notification Logic -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            loadNotificationDropdown();
        });

        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/driverStatusHub")
            .build();

        // Nhận cảnh báo mới
        connection.on("ReceiveDriverAlert", function (message) {
            const alertZone = document.getElementById("alertZone");
            const alertTime = document.getElementById("alertTime");

            if (alertZone && alertTime) {
                alertZone.style.display = "block";
                alertTime.innerText = new Date().toLocaleString();
            }

                   // Push notification ngoài trình duyệt (SỬA CHUẨN)
        if (!("Notification" in window)) {
            alert("Trình duyệt của bạn không hỗ trợ thông báo.");
        } else if (Notification.permission === "granted") {
            Push.create("🚨 Hết tài xế", {
                body: message,
                icon: "/images/driver-warning.png",
                onClick: function () {
                    window.focus();
                    window.location.href = "/DriverStatus";
                    this.close();
                }
            });
        } else if (Notification.permission !== "denied") {
            Notification.requestPermission().then(function (permission) {
                if (permission === "granted") {
                    Push.create("🚨 Hết tài xế", {
                        body: message,
                        icon: "/images/driver-warning.png",
                        onClick: function () {
                            window.focus();
                            window.location.href = "/DriverStatus";
                            this.close();
                        }
                    });
                } else {
                    console.warn("Không được cấp quyền thông báo.");
                }
            });
        } else {
            // Đã từng bị từ chối
            console.warn("Bạn đã từ chối quyền gửi thông báo.");
        }

            // Load lại dropdown khi có cảnh báo mới
            loadNotificationDropdown();
        });

        // Nhận danh sách tài xế (nếu có)
        connection.on("ReceiveDriverStatusList", function (drivers) {
            drivers.forEach(driver => {
                const row = document.getElementById("driver-" + driver.id);
                if (row) {
                    const statusCell = row.querySelector(".status");
                    if (statusCell) {
                        statusCell.textContent = driver.status;
                    }
                }
            });
        });

        // Khởi động SignalR
        connection.start().then(function () {
            console.log("✅ SignalR connected");
            loadNotificationDropdown(); // Load lần đầu
        }).catch(function (err) {
            console.error("❌ SignalR error:", err.toString());
        });

        // Hàm lấy danh sách cảnh báo
        function loadNotificationDropdown() {
            fetch('/api/DriverAlert/GetAlerts') // API lấy danh sách từ DB
                .then(res => res.json())
                .then(data => {
                    const dropdown = document.getElementById("notificationDropdown");
                    const badge = document.getElementById("notificationCount");

                    dropdown.innerHTML = "";

                    if (data.length === 0) {
                        dropdown.innerHTML = `<li><span class="dropdown-item text-muted">Không có thông báo</span></li>`;
                        badge.style.display = "none";
                        return;
                    }

                    badge.innerText = data.length;
                    badge.style.display = "inline";

                    data.forEach(alert => {
                        const item = document.createElement("li");
                        item.innerHTML = `
                            <span class="dropdown-item small text-wrap">
                                🚨 ${alert.message}<br/>
                                <small class="text-muted">${new Date(alert.createdOn).toLocaleString()}</small>
                            </span>
                        `;
                        dropdown.appendChild(item);
                    });
                });
        }
    </script>
</body>
</html>
