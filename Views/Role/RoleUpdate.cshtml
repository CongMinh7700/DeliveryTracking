@model DeliveryTrackingApp.Models.Role.ViewDto

@{
    ViewBag.Title = "Chỉnh sửa phân quyền";
}   

<h2>Chỉnh sửa phân quyền</h2>

@using (Html.BeginForm("RoleUpdate", "Role", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Tên")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="@Url.Action("RolePage")" class="btn btn-secondary">Quay lại</a>
}

